<%= render "form" %>

  <% @project.memberships.each do |m| %>
    <% if m.user.present? %>
      <%= form_for [@project, m], html: {class: 'form-inline'} do |f| %>
      <table>
        <td><%= link_to m.user.full_name, user_path(m.user) %></td>
        <td><%= f.select(:role, [['Owner',1], ['Member', 2]], {}, {class: 'form-control'}) %></td>
        <td><%= f.submit class: "btn btn-info"  %></td>
        <td>
          <%= link_to membership_path(@membership), method: :delete do %>
            <span class="glyphicon glyphicon-remove"></span>
            <% end %>
        </td>
      </table >


      <% end %>
    <% end %>
  <% end %>
