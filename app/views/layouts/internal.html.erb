<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<% if current_user%>
 <% if current_user.permission==true%>
  <%current_user.projects=Project.all%>
 <% end %>
<% end %>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">


  <div class="container">
      <%=link_to("gCamp", projects_path, class:"navbar-brand") %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Projects <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% if current_user %>
              <% current_user.projects.each do |project| %>
              <li> <%= link_to "#{project.name}", project_path(project) %></li>
              <% end %>
              <li class="divider"></li>
              <li> <%= link_to "New Project", new_project_path %></a></li>
            </ul>
          </li>
          <li> <%= link_to "Users", users_path %></li>
        </ul>
        <% end %>


    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %></li>
        <li><%= link_to "Sign out", sign_out_path %></li>
      <% else %>
        <li><%= link_to "Sign In", sign_in_path %></li>
        <li><%= link_to "Sign Up", sign_up_path %></li>
      <% end %>
    </ul>

  </div>




  </nav>


<div class="container">
  <% if flash[:notice]%>
    <div class = "alert alert-success">
      <%= flash[:notice] %>
    </div>
  <%end%>

  <% if flash[:danger]%>
    <div class = "alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <%end%>






<%= yield %>

  <hr></hr>

  <footer class="text-center">

      <%= link_to "Home", root_path %> | <%= link_to("Terms",terms_path) %> | <%= link_to("About",about_path) %> | <%= link_to("FAQ", faq_path) %>
  </footer>


</div>


</body>

</html>
