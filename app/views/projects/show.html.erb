  <% if flash[:success]  %>
    <div class = "alert alert-success ">
      <%= flash[:success] %>
    </div>
  <% end %>

  <h1 class = "page-header">
    <%= @project.name %>

    <div class = "pull-right">

      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-info" %>
      <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

    </div>
  </h1>
  <ul class = "breadcrumb">
    <li> <%= link_to "Projects", projects_path %> / <%= @project.name  %></li>
  </ul>
  <%= link_to pluralize(@project.tasks.count, "task"), project_tasks_path(@project) %>
  <div>
  <%= link_to pluralize(@project.memberships.count, "memberhship"), project_memberships_path(@project) %>
  </div>

  <div class="well">
    <h3>Delete Project</h3>
    <div>
    <%= "Deleting this project will also delete #{pluralize(@project.memberships.count, "memberhship")}, #{pluralize(@project.tasks.count, "task")} and associated comments." %>
    </div>
    <p class="lead"></p>
    <div>
    <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure ?"}, class: "btn btn-danger" %>
    </div>

  </div>
