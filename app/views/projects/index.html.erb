<% if flash[:success]  %>
  <div class = "alert alert-success ">
    <%= flash[:success] %>
  </div>
<% end %>
<h1 class = "page-header">
  Projects
  <div class="pull-right">
    <%= link_to "New Project", new_project_path, class: "btn btn-info" %>
  </div>
</h1>




<table class = "table">
  <thead>
    <th>Name</th>
    <th>Tasks</th>
  </thead>
  <% user_projects = [] %>
  <% @projects.each do |r| %>
    <% r.users.cycle(1) {|x| if x.id == current_user.id
      user_projects<< r
    end} %>
  <% end %>

  <%user_projects.each do |user_project| %>
  <tr>
    <td> <%= link_to "#{user_project.name}", project_path(user_project) %> </td>
    <td> <%= user_project.tasks.count %> </td>
  </tr>
  <% end %>

</table>
