<h1 class = "page-header"> <%= @user.first_name+" "+@user.last_name %>
  <div class = "pull-right">
    <% if @user.id == current_user.id || current_user.permission == true %>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-info" %>
    <% end %>
  </div>
</h1>

<dl class="dl-horizontal">
  <dt>First Name</dt>
  <dd> <%= @user.first_name %> </dd>
  <dt>Last Name</dt>
  <dd> <%= @user.last_name %> </dd>
  <% if @user.id == current_user.id || !match(@user) || current_user.permission == true   %>
    <dt>Email</dt>
    <dd> <%= @user.email %> </dd>
    <dt>Pivotal Tracker Token</dt>
    <dd> <%= hide_token(current_user.pivotal_tracker_token) %></dd>

  <% end %>

</dl>
