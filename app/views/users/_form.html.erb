
  <%= form_for @user, html: {class: "form-horizontal"} do |u| %>
  <% if @user.errors.any? %>
    <div class = "form-group">
      <div class = "col-sm-offset-2 col-sm-6">
        <div class = "alert alert-danger">

            <h3><%= pluralize(@user.errors.count, "error")%>  prohibited this from being saved : </h3>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>

        </div>
      </div>
    </div>
  <% end %>

  <div class = "form-group">
    <div class = "col-sm-2">
      <%= u.label :first_name, class: "control-label" %>
    </div>
    <div class = "col-sm-4">
      <%= u.text_field :first_name, class: "form-control " %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-sm-2">
      <%= u.label :last_name, class: "control-label" %>
    </div>
    <div class = "col-sm-4">
      <%= u.text_field :last_name, class: "form-control " %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-sm-2">
      <%= u.label :email, class: "control-label" %>
    </div>
    <div class = "col-sm-4">
      <%= u.email_field :email, class: "form-control " %>
    </div>
  </div>


  <div class = "form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= u.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', users_path, class: "btn btn-default" %>

    </div>
  </div>






  <% end %>
  <%if params[:action] == "edit" %>
  <div class = "row">
      <div class = "col-sm-offset-2 col-sm-4">
        <div class = "well text-center">


            <%= link_to "Delete User", user_path(@user), method: :delete,data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

        </div>
      </div>
  </div>
  <% end %>
