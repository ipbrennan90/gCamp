
  <%= form_for @user, html: {class: "form-horizontal"} do |u| %>

  <div class = "form-group">
    <div class = "col-sm-2">
      <%= u.label :first_name, class: "control-label" %>
    </div>
    <div class = "col-sm-4">
      <%= u.text_field :first_name, class: "form-control " %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-sm-2">
      <%= u.label :last_name, class: "control-label" %>
    </div>
    <div class = "col-sm-4">
      <%= u.text_field :last_name, class: "form-control " %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-sm-2">
      <%= u.label :email, class: "control-label" %>
    </div>
    <div class = "col-sm-4">
      <%= u.email_field :email, class: "form-control " %>
    </div>
  </div>


  <div class = "form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= u.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', users_path, class: "btn btn-default" %>
      <%if params[:action] == "edit" %>
        <%= link_to "Delete", user_path(@user), method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>




  <% end %>
