<%= flash[:notice]%>
<h1>Listing Tasks</h1>
<% @tasks.each do |t| %>

  <h3> Description </h3>
  <%= t.description %>
  <%= link_to 'Show', task_path(t) %>
  <%= link_to 'Delete', task_path(t), method: :delete, data: {confirm: 'Really? for reals?'}%>
  <%= link_to 'Edit', edit_task_path(t) %>

<% end %>
</br>
<%= link_to "New Task", new_task_path %>
