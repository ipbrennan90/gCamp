<div class= "container">
  <%= form_for @task html: {class: "form-horizontal"} do |f| %>

    <h1> New Task </h1>
    <div class = "form group">
      <div class "col-md-2">
        <%= f.label :description %>
      </div>
      <div class "col-md-5">
        <%= f.text_field :description %>
      </div>

      <div class = "col-md-2">
        <%= f.submit "Create Task" %>
      </div>

    </div>



  <% end %>

</div>
