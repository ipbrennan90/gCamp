<div class= "container">
  <%= form_for @task, html: {class: "form-horizontal"} do |f| %>

    <h1> New Task </h1>
    <div class = "form group">
      <div class "col-md-4">
        <%= f.label :description %>
      </div>
      <div class "col-md-4">
        <%= f.text_field :description %>
      </div>
        <%= f.submit "Create Task" %>



    </div>



  <% end %>

</div>
